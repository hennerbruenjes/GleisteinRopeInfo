<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark"
    android:padding="@dimen/abc_text_size_medium_material">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Einstellungen"
                android:id="@+id/textView5"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benutzername:"
                android:id="@+id/textView6"
                android:textColor="@color/abc_primary_text_material_dark"
                android:paddingTop="@dimen/abc_text_size_medium_material" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/textviewUser"
                android:textColor="@color/secondary_text_default_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passwort:"
                android:id="@+id/textView7"
                android:textColor="@color/abc_primary_text_material_dark"
                android:paddingTop="@dimen/abc_text_size_medium_material" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/textviewPw"
                android:textColor="@color/abc_secondary_text_material_dark" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Abbrechen"
                android:id="@+id/buttonAbbrechen"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Speichern"
                android:id="@+id/buttonSpeichern"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>